{
    "name": "gicvscodeextension",
    "displayName": "GICVSCodeExtension",
    "description": "GICXMLLayout VSCode Extension",
    "version": "1.1.3",
    "publisher": "gonghaiwei",
    "engines": {
        "vscode": "^1.27.0"
    },
    "keywords": [
        "gic",
        "gicxmllayout"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "GICXMLLayout",
            "properties": {
                "GICXMLLayout.httpServerPort": {
                    "type": "integer",
                    "default": 8080,
                    "description": "http服务器端口，同时也是websocket使用的端口"
                },
                "GICXMLLayout.resolvePath": {
                    "type": "boolean",
                    "default": true,
                    "description": "编译的时候是否解析路径(将相对路径解析成绝对路径)"
                },
                "GICXMLLayout.miniJSCode": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否压缩JS代码"
                },
                "GICXMLLayout.projectFolderName": {
                    "type": "string",
                    "default": "project",
                    "description": "存放项目文件的目录名称"
                },
                "GICXMLLayout.elements": {
                    "type": "array",
                    "default": [
                        {
                            "elementName": "elementName",
                            "desc": "desc",
                            "isui": false,
                            "attributes": [
                                {
                                    "name": "name",
                                    "desc": "desc",
                                    "type": "enum",
                                    "enums": [
                                        {
                                            "name": "name",
                                            "value": 0,
                                            "desc": "desc"
                                        }
                                    ]
                                }
                            ],
                            "subElements": [
                                {}
                            ]
                        }
                    ],
                    "description": "自定义元素配置"
                },
                "GICXMLLayout.behaviors": {
                    "type": "array",
                    "default": [
                        {
                            "elementName": "elementName",
                            "desc": "desc",
                            "attributes": [
                                {
                                    "name": "name",
                                    "desc": "desc",
                                    "type": "bool"
                                }
                            ]
                        }
                    ],
                    "description": "自定义行为配置"
                }
            }
        },
        "commands": [
            {
                "command": "extension.gic.buildjs",
                "title": "Build"
            },
            {
                "command": "extension.gic.buildAndZip",
                "title": "Build And Zip"
            },
            {
                "command": "extension.gic.init",
                "title": "初始化"
            },
            {
                "command": "extension.gic.buildAndRun",
                "title": "Build And Run"
            },
            {
                "command": "extension.gic.createPage",
                "title": "Create GIC Page",
                "category": "Files and Folder"
            },
            {
                "command": "extension.gic.createJS",
                "title": "Create GIC JavaScript File",
                "category": "Files and Folder"
            }
        ],
        "keybindings": [
            {
                "command": "extension.gic.buildjs",
                "key": "ctrl+b",
                "mac": "cmd+b"
            },
            {
                "command": "extension.gic.buildAndRun",
                "key": "ctrl+r",
                "mac": "cmd+r"
            },
            {
                "command": "extension.gic.createPage",
                "key": "ctrl+cmd+n"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.gic.createPage",
                    "group": "navigation@-createFileFolder"
                },
                {
                    "command": "extension.gic.createJS",
                    "group": "navigation@-createFileFolder"
                }
            ],
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "extension.gic.buildjs",
                    "group": "gic"
                },
                {
                    "when": "editorFocus",
                    "command": "extension.gic.buildAndZip",
                    "group": "gic"
                },
                {
                    "when": "editorFocus",
                    "command": "extension.gic.init",
                    "group": "gic"
                },
                {
                    "when": "editorFocus",
                    "command": "extension.gic.buildAndRun",
                    "group": "gic"
                }
            ],
            "editor/title": [
                {
                    "when": "editorFocus",
                    "command": "extension.gic.buildjs",
                    "group": "navigation"
                },
                {
                    "when": "editorFocus",
                    "command": "extension.gic.buildAndZip",
                    "group": "navigation"
                },
                {
                    "when": "editorFocus",
                    "command": "extension.gic.init",
                    "group": "navigation"
                },
                {
                    "when": "editorFocus",
                    "command": "extension.gic.buildAndRun",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "eslint": "^4.11.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "@babel/core": "^7.2.0",
        "@babel/plugin-transform-arrow-functions": "^7.2.0",
        "@babel/plugin-transform-async-to-generator": "^7.2.0",
        "@babel/plugin-transform-block-scoping": "^7.2.0",
        "@babel/plugin-transform-classes": "^7.2.0",
        "@babel/plugin-transform-computed-properties": "^7.2.0",
        "@babel/plugin-transform-destructuring": "^7.2.0",
        "@babel/plugin-transform-for-of": "^7.2.0",
        "@babel/plugin-transform-instanceof": "^7.2.0",
        "@babel/plugin-transform-parameters": "^7.2.0",
        "@babel/plugin-transform-regenerator": "^7.0.0",
        "@babel/plugin-transform-shorthand-properties": "^7.2.0",
        "@babel/plugin-transform-sticky-regex": "^7.2.0",
        "@babel/plugin-transform-template-literals": "^7.2.0",
        "@babel/plugin-transform-typeof-symbol": "^7.2.0",
        "uglify-js": "^3.4.9",
        "watch": "^1.0.2",
        "websocket": "^1.0.28",
        "xml-parser": "^1.2.1",
        "xml-writer": "^1.7.0",
        "zip-local": "^0.3.4"
    },
    "extensionDependencies": [
        "redhat.vscode-xml"
    ]
}
