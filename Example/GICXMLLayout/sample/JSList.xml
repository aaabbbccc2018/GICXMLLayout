<page title="JS相关功能">
    <!--list 相当于UITableView-->
    <list background-color="white" separator-style="1">
        <data-context>
            [{
            "name": "JS基本功能",
            "pagePath": "js/JSScript.xml"
            }, {
            "name": "JSAPI(GIC提供的API支持)",
            "pagePath": "js/JSAPI.xml"
            },{
            "name": "Router(导航相关)",
            "pagePath": "js/Router.xml"
            }, {
            "name": "JS扩展",
            "pagePath": "js/JSExtension.xml"
            }, {
            "name": "Popover",
            "pagePath": "popover/PopoverSample.xml"
            }, {
            "name": "Toast",
            "pagePath": "js/Toast.xml"
            }]
        </data-context>
        <section>
            <for>
                <list-item selection-style="2">
                    <inset-panel background-color="white" inset="15">
                        <behaviors>
                            <bev-router-link path="{{pagePath}}"/>
                        </behaviors>
                        <animations>
                            <anim-transforms on="2" autoreverses="1" duration="0.1">
                                <anim-scale  from="1" to="0.95"  />
                            </anim-transforms>
                        </animations>
                        <lable text="{{ name }}" font-size="15"></lable>
                    </inset-panel>
                </list-item>
            </for>
        </section>
    </list>
</page>

