<page title="NativeAPI" js-router="1">
    <style path="style/CommonStyle.xml" />
    <scroll-view background-color="white">
        <inset-panel inset="10">
            <behaviors>
                <script path="js/NativeAPI.js"/>
            </behaviors>
            <stack-panel>
                <template-ref t-name="title" data-context="NSUserDefaults 使用示例"/>
                <template-ref t-name="desc" data-context="setValue:forKey:"/>
                <lable text="点我设置value" font-size="18">
                    <behaviors>
                        <script private="1">
                            this.onclick = function (){
                                NSUserDefaults.standardUserDefaults().setValue("我是通过js 设置的value","JSSetValue");
                                alert('设置成功！');
                            }
                        </script>
                    </behaviors>
                </lable>

                <template-ref t-name="desc" data-context="valueForKey:"/>
                <lable text="点我读取value" font-size="18">
                    <behaviors>
                        <script private="1">
                            this.onclick = function (){
                                alert(NSUserDefaults.standardUserDefaults().valueForKey("JSSetValue"));
                            }
                        </script>
                    </behaviors>
                </lable>

                <template-ref t-name="title" data-context="UIDevice 使用示例"/>
                <lable text="" font-size="18">
                    <behaviors>
                        <script private="1">
                            var device = UIDevice.currentDevice();
                            this.text = 'name:'+device.name + '\r\n' + 'systemName:'+device.systemName + '\r\n'+'systemVersion:'+device.systemVersion;
                        </script>
                    </behaviors>
                </lable>
            </stack-panel>
        </inset-panel>
    </scroll-view>
</page>

