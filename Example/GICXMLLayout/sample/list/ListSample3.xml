<page title="动态列表" data-context='ListSample3ViewModel' background-color="white">
    <templates>
        <template t-name="list-template">
            <lable text="{{  }}"></lable>
        </template>
        
        <template t-name="button">
            <lable text="{{ }}"></lable>
        </template>
    </templates>
    <stack-panel>
        <dock-panel height="60" background-color="yellow" space-before="64">
            <template-ref t-name="button" data-context="增加一个" event-tap="addItem" dock-panel.horizal="0"/>
            <template-ref t-name="button" data-context="插入一个" event-tap="insertItem" dock-panel.horizal="1"/>
            <template-ref t-name="button" data-context="减少一个" event-tap="deleteItem" dock-panel.horizal="2"/>
        </dock-panel>
        <list  flex-grow="1" background-color="blue" flex-shrink="1">
            <section>
                <for data-path="listDatas">
                    <list-item separator-inset = "0 15 0 15">
                        <template-ref t-name="list-template"/>
                    </list-item>
                </for>
            </section>
        </list>
    </stack-panel>
</page>
